	</include>

	<!-- launch the imu dummy node -->
	<include file="$(find kinect_launchfiles)/launch/imu_dummy.launch">
	</include>

	<!-- launch the monte carlo localization node -->
	<include file="$(find kinect_launchfiles)/launch/mcl_localization.launch">
