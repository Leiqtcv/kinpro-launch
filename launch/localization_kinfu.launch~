	<!--include file="$(find kinect_launchfiles)/launch/camera.launch">
		<arg name="dreg" value="false"/>
	</include-->
	
	<!-- launch the static tf transforms -->
	<include file="$(find kinect_launchfiles)/launch/tf_base2camlink.launch">
